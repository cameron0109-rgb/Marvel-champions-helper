    #game { display: flex; flex-direction: column; align-items: center; width: 100%; max-width: 600px; }
    #villain, #hand, #deckInfo, #schemes, #minions { margin: 10px; padding: 10px; border: 1px solid #fff; border-radius: 8px; width: 90%; text-align: center; }
